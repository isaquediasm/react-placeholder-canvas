{
  "parser": "babel-eslint",
  "plugins": ["react", "react-hooks", "jsx-a11y", "jest"],
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "import/prefer-default-export": "off"
  },
  "extends": ["airbnb-base", "plugin:jsx-a11y/recommended", "prettier"]
}